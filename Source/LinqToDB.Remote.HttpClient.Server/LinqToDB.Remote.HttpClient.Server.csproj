<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<AssemblyName>linq2db.Remote.HttpClient.Server</AssemblyName>
		<RootNamespace>LinqToDB.Remote.HttpClient.Server</RootNamespace>
		<OutputType>Library</OutputType>

		<TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
		<TargetFrameworks Condition="'$(Configuration)'=='Testing'">net10.0</TargetFrameworks>

		<IsAotCompatible>true</IsAotCompatible>
	</PropertyGroup>
	
	<PropertyGroup Label="Nuget">
		<Title>LINQ to DB remote data context over HttpClient</Title>
		<Description>LINQ to DB Remote HttpClient package provides server classes to query database remotely using HttpClient.</Description>
		<Product>$(Title)</Product>

		<EnablePackageValidation>false</EnablePackageValidation>

		<PackageTags>$(PackageTags);HttpClient;RemoteLinq</PackageTags>
	</PropertyGroup>

	<ItemGroup Label="Nuget">
		<None Include="../../Nuget/README.Remote.HttpClient.Server.md" Pack="true" PackagePath="readme.md" Visible="False" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="PublicAPI.*.txt" />
	</ItemGroup>
</Project>

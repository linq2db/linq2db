<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<AssemblyName>linq2db.Remote.HttpClient.Client</AssemblyName>
		<RootNamespace>LinqToDB.Remote.HttpClient.Client</RootNamespace>

		<IsAotCompatible Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">true</IsAotCompatible>
	</PropertyGroup>

	<PropertyGroup Label="Nuget">
		<Title>LINQ to DB remote data context over HttpClient</Title>
		<Description>LINQ to DB Remote HttpClient package provides client classes to query database remotely using HttpClient.</Description>
		<Product>$(Title)</Product>

		<PackageTags>$(PackageTags);HttpClient;RemoteLinq</PackageTags>
	</PropertyGroup>

	<ItemGroup Label="Nuget">
		<None Include="../../Nuget/README.Remote.HttpClient.Client.md" Pack="true" PackagePath="readme.md" Visible="False" />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />

		<PackageReference Include="Microsoft.Extensions.Http" />
		<PackageReference Include="System.Net.Http.Json" Condition="$(TargetFramework) == 'net462' OR $(TargetFramework) == 'netstandard2.0'" />
		
		<!--vulnerable transient dependency-->
		<PackageReference Include="System.Text.Json" Condition="$(TargetFramework) == 'net462' OR $(TargetFramework) == 'netstandard2.0'" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="PublicAPI.*.txt" />
	</ItemGroup>
</Project>

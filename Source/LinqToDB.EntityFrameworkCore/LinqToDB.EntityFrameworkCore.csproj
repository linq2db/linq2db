<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<AssemblyName>linq2db.EntityFrameworkCore</AssemblyName>
		<RootNamespace>LinqToDB.EntityFrameworkCore</RootNamespace>
		
		<DocumentationFile>$(ArtifactsPath)\bin\$(MSBuildProjectName)\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
		<TargetFrameworks>netstandard2.0;net6.0;net8.0</TargetFrameworks>

		<!--EF1001: use of internal EF API-->
		<NoWarn>EF1001</NoWarn>

		<Version Condition="'$(TargetFramework)'=='netstandard2.0'">$(EF3Version)</Version>
		<Version Condition="'$(TargetFramework)'=='net6.0'">$(EF6Version)</Version>
		<Version Condition="'$(TargetFramework)'=='net8.0'">$(EF8Version)</Version>
	</PropertyGroup>

	<PropertyGroup>
		<DefineConstants Condition="'$(TargetFramework)'=='netstandard2.0'">EF31;$(DefineConstants)</DefineConstants>
		<DefineConstants Condition="'$(TargetFramework)'=='net6.0'">EF6;$(DefineConstants)</DefineConstants>
		<DefineConstants Condition="'$(TargetFramework)'=='net8.0'">EF8;$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="PublicAPI/PublicAPI.*.txt" />
		<AdditionalFiles Include="PublicAPI/$(TargetFramework)/PublicAPI.*.txt" />
	</ItemGroup>

</Project>

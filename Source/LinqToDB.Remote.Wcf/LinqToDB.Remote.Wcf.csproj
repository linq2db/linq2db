<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<AssemblyName>linq2db.Remote.Wcf</AssemblyName>
		<RootNamespace>LinqToDB.Remote.Wcf</RootNamespace>

		<TargetFrameworks>net462</TargetFrameworks>
	</PropertyGroup>
	
	<PropertyGroup Label="Nuget">
		<Title>LINQ to DB remote data context over WCF</Title>
		<Description>LINQ to DB Remote WCF package provides client and server classes to query database remotely using WCF.</Description>
		<Product>$(Title)</Product>

		<PackageTags>$(PackageTags);WCF;RemoteLinq</PackageTags>
	</PropertyGroup>

	<ItemGroup Label="Nuget">
		<None Include="../../Nuget/README.Remote.Wcf.md" Pack="true" PackagePath="readme.md" Visible="False" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="PublicAPI.*.txt" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="System.ServiceModel" />
	</ItemGroup>
</Project>

    <PackageReference Include="System.Data.SqlClient" Version="4.4.0" />
    <PackageReference Include="System.Net.NetworkInformation" Version="4.3.0" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Data\RetryPolicy\RetryingDbCommand.cs">
      <SubType>Component</SubType>
    </Compile>
    <Compile Update="Data\RetryPolicy\RetryingDbConnection.cs">
      <SubType>Component</SubType>
    </Compile>
  </ItemGroup>
</Project>
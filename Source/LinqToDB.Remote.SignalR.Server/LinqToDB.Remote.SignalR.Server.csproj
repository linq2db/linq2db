<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<AssemblyName>linq2db.Remote.SignalR.Server</AssemblyName>
		<RootNamespace>LinqToDB.Remote.SignalR</RootNamespace>
		<OutputType>Library</OutputType>

		<IsAotCompatible Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">true</IsAotCompatible>
	</PropertyGroup>

	<PropertyGroup Label="Nuget">
		<Title>LINQ to DB remote data context over Signal/R</Title>
		<Description>LINQ to DB Remote Signal/R package provides server classes to query database remotely using Signal/R.</Description>
		<Product>$(Title)</Product>

		<PackageTags>$(PackageTags);Signal/R;RemoteLinq</PackageTags>
	</PropertyGroup>

	<ItemGroup Label="Nuget">
		<None Include="readme.md" Pack="true" PackagePath="readme.md" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />
	</ItemGroup>

	<ItemGroup Condition="!$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Core" />

		<!--transitive vulnerable packages-->
		<PackageReference Include="Newtonsoft.Json" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="PublicAPI.*.txt" />
	</ItemGroup>
</Project>

<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<LangVersion>9</LangVersion>
		<AssemblyName>linq2db.FSharp</AssemblyName>
		<RootNamespace>LinqToDB.FSharp</RootNamespace>

		<WarningLevel>5</WarningLevel>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>

	</PropertyGroup>

	<PropertyGroup Label="Nuget">
		<Title>LINQ to DB F# Services</Title>
		<Description>LINQ to DB F# Services adds support for F#-specific features to Linq To DB.</Description>
		<Product>$(Title)</Product>

		<PackageTags>$(PackageTags);fsharp;aspnetcore</PackageTags>
	</PropertyGroup>

	<ItemGroup Label="Nuget">
		<None Include="../../Nuget/README.FSharp.md" Pack="true" PackagePath="readme.md" Visible="False" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="FSharpEntityBindingInterceptor.fs" />
		<Compile Include="DataOptionsExtensions.fs" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net462' ">
		<PackageReference Include="FSharp.Core" />
	</ItemGroup>

</Project>

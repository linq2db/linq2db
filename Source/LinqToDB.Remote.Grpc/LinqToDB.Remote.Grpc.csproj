<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\Build\linq2db.Source.props" />

	<PropertyGroup>
		<AssemblyName>linq2db.Remote.Grpc</AssemblyName>
		<RootNamespace>LinqToDB.Remote.Grpc</RootNamespace>

		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\linq2db.remote.grpc.xml</DocumentationFile>
		<TargetFrameworks>netcoreapp3.1;net6.0</TargetFrameworks>
	</PropertyGroup>

	<ItemGroup>
	  <ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<DefineConstants>OVERRIDETOSTRING;$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup>
		<DefineConstants>NATIVE_ASYNC;$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Grpc.Net.Client" />
		<PackageReference Include="protobuf-net.Grpc.AspNetCore" />
	</ItemGroup>
</Project>

<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<AssemblyName>linq2db.Remote.Grpc</AssemblyName>
		<RootNamespace>LinqToDB.Remote.Grpc</RootNamespace>

		<IsAotCompatible Condition=" $([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0')) ">true</IsAotCompatible>
	</PropertyGroup>

	<PropertyGroup Label="Nuget">
		<Title>LINQ to DB remote data context over gRPC</Title>
		<Description>LINQ to DB Remote gRPC package provides client and server classes to query database remotely using gRPC.</Description>
		<Product>$(Title)</Product>

		<PackageTags>$(PackageTags);gRPC;RemoteLinq</PackageTags>
	</PropertyGroup>

	<ItemGroup Label="Nuget">
		<None Include="../../Nuget/README.Remote.Grpc.md" Pack="true" PackagePath="readme.md" Visible="False" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="PublicAPI.*.txt" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Grpc.Net.Client" />
		<PackageReference Include="protobuf-net.Grpc" />
		<PackageReference Include="protobuf-net" />
	</ItemGroup>
</Project>

		<None Include="../Firebird/*.ttinclude"            Pack="true" PackagePath="contentFiles\any\any\LinqToDB.Templates\" />
		<None Include="../Firebird/*.ttinclude"            Pack="true" PackagePath="content\LinqToDB.Templates\" />
		<None Include="../Firebird/*.txt"                  Pack="true" PackagePath="contentFiles\any\any\LinqToDB.Templates\" />
